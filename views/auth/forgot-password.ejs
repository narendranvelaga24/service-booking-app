<section id="forgot-password-page">
    <h2>Forgot Your Password?</h2>
    <p>Enter your email address below, and if an account exists, we'll (mock) send you a link to reset your password.</p>
    <form action="/auth/forgot-password" method="POST" id="forgotPasswordForm">
        <div class="form-group">
            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" value="<%= typeof formData !== 'undefined' ? formData.email : '' %>" required>
            <% if (typeof errors !== 'undefined' && errors.email) { %><small class="error-text"><%= errors.email %></small><% } %>
        </div>
        
        <% if (typeof errors !== 'undefined' && errors.general) { %>
            <div class="alert alert-danger"><%= errors.general %></div>
        <% } %>

        <button type="submit" class="btn">Send Reset Link</button>
    </form>
    <p style="margin-top: 1rem;">
        Remembered your password? <a href="/auth/login">Login here</a>.
    </p>
</section>
